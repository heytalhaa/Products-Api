<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemIV"
        android:layout_width="255dp"
        android:layout_height="240dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:text="Fresh Meals"
        android:textSize="48sp"
        android:fontFamily="@font/akshar_regular"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@id/itemIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/detailsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover fresh, healthy meals delivered straight to your door."
        android:textSize="24sp"
        android:fontFamily="@font/akshar_regular"
        android:layout_marginTop="37dp"
        android:paddingHorizontal="70dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>