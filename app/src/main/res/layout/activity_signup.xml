<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="26dp"
    tools:context=".ui.signupui.SignupActivity">

    <ImageView
        android:id="@+id/logoIV"
        android:layout_width="171dp"
        android:layout_height="160dp"
        android:src="@drawable/mainlogo"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/createAccTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account"
        android:textSize="26sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/strongCyan"
        android:fontFamily="@font/inter_18pt_medium"
        app:layout_constraintTop_toBottomOf="@id/logoIV"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="18sp"
        android:layout_marginTop="23dp"
        android:textColor="@color/darkGrayish"
        android:fontFamily="@font/inter_18pt_regular"
        app:layout_constraintTop_toBottomOf="@id/createAccTV"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:id="@+id/nameETBox"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/edittextbox"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/nameTV"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="18dp">
            <ImageView
                android:id="@+id/userIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/nameET"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:hint="AndroidDev"
                android:background="@null"
                android:singleLine="true"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/userIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textSize="18sp"
        android:layout_marginTop="23dp"
        android:textColor="@color/darkGrayish"
        android:fontFamily="@font/inter_18pt_regular"
        app:layout_constraintTop_toBottomOf="@id/nameETBox"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:id="@+id/emailETBox"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/edittextbox"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/emailTV"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="18dp">
            <ImageView
                android:id="@+id/usertagIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/usertag"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/emailET"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:hint="AndroidDev@gmail.com"
                android:background="@null"
                android:singleLine="true"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/usertagIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/passwordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/inter_18pt_regular"
        android:textColor="@color/darkGrayish"
        app:layout_constraintTop_toBottomOf="@id/emailETBox"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:id="@+id/passwordETBox"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@drawable/edittextbox"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/passwordTV"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="18dp">
            <ImageView
                android:id="@+id/lockIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lock1"
                android:layout_marginTop="17dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <EditText
                android:id="@+id/passwordET"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:hint="123456"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/lockIV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <ImageView
                android:id="@+id/eyelashIV"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/visibility_off_24px"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/termsAndCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/passwordETBox">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I have read &amp; agreed to DayTask Privacy Policy, Terms &amp; Conditions"
            android:textSize="14sp"
            android:fontFamily="@font/inter_18pt_regular"
            android:textColor="@color/mostlyBlack"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupBtn"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="33dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_18pt_regular"
        android:background="@drawable/btndesign"
        app:layout_constraintTop_toBottomOf="@id/termsAndCondition"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="26dp"
        app:layout_constraintTop_toBottomOf="@id/signupBtn"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="16sp"
            android:fontFamily="@font/inter_18pt_regular"
            android:textColor="@color/mostlyBlack"
            />
        <TextView
            android:id="@+id/loginTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textSize="16sp"
            android:fontFamily="@font/inter_18pt_regular"
            android:textColor="@color/strongCyan"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>